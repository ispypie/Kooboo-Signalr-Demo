@model Kooboo.CMS.Sites.Models.CacheSettings
@Html.EditorFor(m => m.EnableCaching)
@Html.EditorFor(m => m.Duration, new { HtmlAttributes = new { @class = "medium" } })
@Html.EditorFor(m => m.ExpirationPolicy, new { HtmlAttributes = new { @class = "medium" } })
<script>
    $(function () {
        var checkbox = $('#OutputCache_EnableCaching').click(function () {
            var handle = $(this);
            initChecked(handle);
        });

        function initChecked(handle) {
            if (handle.attr('checked')) {
                $('#OutputCache_Duration').attr('disabled', false);
                $('#OutputCache_ExpirationPolicy').attr('disabled', false);
            } else {
                $('#OutputCache_Duration').attr('disabled', true);
                $('#OutputCache_ExpirationPolicy').attr('disabled', true);
            }
        }

        initChecked(checkbox);
    });
</script>

