@model ChatModule.Models.News
@{
    Layout = "~/Views/Shared/Blank.cshtml";
    ViewBag.Title = "News".Localize();
}

@section Panel{
    <ul class="panel">
        <li>
            <a data-ajaxform="">
                @Html.IconImage("save") @("Save".Localize())</a>
        </li>
        <li>
            <a href="@ViewContext.RequestContext.GetRequestValue("return")">
                @Html.IconImage("cancel") @("Cancel".Localize())</a>
        </li>
    </ul>
}
<div class="block common-form">
    <h1 class="title">@ViewBag.Title</h1>

    @using (Html.BeginForm())
    {	 
        @Html.ValidationSummary(true)

            <table>
                <tbody>
                    @Html.EditorFor(m => m.Title, new { @class = "medium" })
                    @Html.EditorFor(m => m.Body)
                </tbody>
            </table>
   
    }
</div>
